{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"allowJs": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noEmit": true,
		"types": ["node", "vite/client"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
		"types/**/*.ts",
		"vite.config.ts"
	],
	"exclude": ["node_modules", "dist", "**/*.js", "**/*.md", "src/**/*.md"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
